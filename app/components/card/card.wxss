/* components/card/card.wxss */
.card{
  border-top: 1px solid #d5d5d5;
  border-bottom: 1px solid #d5d5d5;
}
.card .card-header{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 12rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.card-header .header-image{
  width: 32px;
  height: 32px;
}
.card .content{
  padding: 12rpx 32rpx;
}